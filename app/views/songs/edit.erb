<h1>Edit <%=@song.name%>!</h1>

<form action="/songs/<%= @song.slug %>" method="POST">
<input id="hidden" type="hidden" name="_method" value="patch">
  <label>Name:</label>
  <input id= "Name" type="text" name="song[name]">

  <label>Artist:</label>
  <input id= "Artist Name" type="text" name="artist[name]">

  <h3>Genre:</h3>
  <% @genres.each do |genre| %>
    
    <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>">
  <% end %>                                                         
  <br>
  

  <input type="submit" value="Edit Song">
</form>
